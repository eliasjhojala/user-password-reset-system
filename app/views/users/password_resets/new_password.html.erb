<%= list_errors @user %>
<%= form_for @user, url: { action: :typed_new_password_for_password_reset }, method: :post, html: { class: "general" } do |f| %>
  <% unless UserPasswordResetSystem.settings[:hide_username] %>
    <%= f.text_field :username, disabled: true, placeholder: User.human_attribute_name(:username) %>
  <% end %>
  <%= f.password_field :password, placeholder: t(".new_password") %>
  <%= f.password_field :password_confirmation, placeholder: t(".new_password_confirmation") %>
  <%= hidden_field_tag :token, params[:token] %>
  <%= hidden_field_tag :email, params[:email] %>
  <%= hidden_field_tag :id, params[:id] %>
  <%= submit_tag t(".save") %>
<% end %>
